<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Primary app theme -->
	<style name="Theme.LocationSharing" parent="Theme.Material3.DayNight.NoActionBar">

		<!-- Primary brand color (buttons, checkboxes, etc.) -->
		<item name="colorPrimary">@color/blue_400</item>
		<item name="colorPrimaryVariant">@color/white</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary color (e.g. line under EditText's when active) -->
		<item name="colorSecondary">@color/blue_300</item>
		<item name="colorSecondaryVariant">@color/blue_300</item>
		<item name="colorOnSecondary">@color/black</item>

		<!-- Transparent status bar -->
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

	</style>

</resources>
