<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Default theme (as configured in AndroidManifest.xml) -->
	<style name="Theme.LocationSharing" parent="Theme.Material3.DayNight.NoActionBar">

		<!-- Primary color (buttons, checkboxes, etc.) -->
		<item name="colorPrimary">@color/blue_400</item>
		<item name="colorPrimaryVariant">@color/blue_400</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary color (e.g. line under EditText's when active) -->
		<item name="colorSecondary">@color/blue_300</item>
		<item name="colorSecondaryVariant">@color/blue_300</item>
		<item name="colorOnSecondary">@color/black</item>

		<!-- Transparent status bar -->
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

		<!-- Shift content up into the status bar -->
		<!-- <item name="android:windowTranslucentStatus">true</item>-->

		<!-- Custom action bar themes -->
		<item name="actionBarTheme">@style/ThemeOverlay.LocationSharing.ActionBar</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.LocationSharing.ActionBar.OverflowMenu</item>

	</style>

	<!-- Blue action bar with white text -->
	<style name="ThemeOverlay.LocationSharing.ActionBar" parent="ThemeOverlay.Material3.Dark">

		<!-- Background -->
		<item name="colorSurface">@color/blue_400</item>

		<!-- Title & subtitle -->
		<item name="colorOnSurface">@color/white</item>
		<item name="colorOnSurfaceVariant">@color/white</item>
	</style>

	<!-- White action bar overflow menu -->
	<style name="ThemeOverlay.LocationSharing.ActionBar.OverflowMenu" parent="ThemeOverlay.Material3.Light">

		<!-- Icon -->
		<item name="colorPrimary">@color/white</item>

	</style>

</resources>
