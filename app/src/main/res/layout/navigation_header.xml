<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/navigationHeaderLayout"
	android:layout_width="match_parent"
	android:layout_height="145dp"
	android:gravity="bottom"
	android:orientation="vertical"
	android:theme="@style/ThemeOverlay.AppCompat.Dark">

	<!-- https://stackoverflow.com/a/34290119 -->

	<TextView
		android:id="@+id/navigationHeaderNameTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/navigation_header_name_none"
		android:textAlignment="center"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		android:textColor="@color/black"
		android:textSize="16sp"
		android:textStyle="bold|italic" />

	<TextView
		android:id="@+id/navigationHeaderGroupTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/navigation_header_group_none"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="16sp"
		android:textStyle="italic" />

</LinearLayout>
